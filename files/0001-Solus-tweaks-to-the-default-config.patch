Date: Tue, 30 Jul 2019 18:26:33 +0200
Subject: [PATCH 1/1] Solus tweaks to the default config

---
 applets/digital-clock/package/contents/config/main.xml    | 8 ++++----
 .../digital-clock/package/contents/ui/DigitalClock.qml    | 2 ++
 .../package/contents/ui/configAppearance.qml              | 4 ++++
 lookandfeel/contents/logout/Logout.qml                    | 2 +-
 sddm-theme/theme.conf.cmake                               | 2 +-
 5 files changed, 12 insertions(+), 6 deletions(-)

diff --git a/applets/digital-clock/package/contents/config/main.xml b/applets/digital-clock/package/contents/config/main.xml
index 00560ed..46fe047 100644
--- a/applets/digital-clock/package/contents/config/main.xml
+++ b/applets/digital-clock/package/contents/config/main.xml
@@ -16,15 +16,15 @@
     </entry>
     <entry name="showDate" type="Bool">
       <label>Whether the date should be shown next to the clock.</label>
-      <default>false</default>
+      <default>true</default>
     </entry>
     <entry name="dateFormat" type="string">
-      <label>The date format to display. Options are: shortDate, longDate, isoDate or custom.</label>
-      <default>shortDate</default>
+      <label>The date format to display. Options are: shortDate, longDate, isoDate, custom or rfc2822Date.</label>
+      <default>customDateFormat</default>
     </entry>
     <entry name="customDateFormat" type="string">
       <label>Custom date format string.</label>
-      <default>ddd d</default>
+      <default>d MMM yyyy</default>
     </entry>
     <entry name="fontFamily" type="string">
       <label>Font family. e.g "arial". The system font is used if this is not set.</label>
diff --git a/applets/digital-clock/package/contents/ui/DigitalClock.qml b/applets/digital-clock/package/contents/ui/DigitalClock.qml
index 0ac5ba8..78c5fdc 100644
--- a/applets/digital-clock/package/contents/ui/DigitalClock.qml
+++ b/applets/digital-clock/package/contents/ui/DigitalClock.qml
@@ -40,6 +40,8 @@ Item {
             return Qt.SystemLocaleLongDate; // int
         } else if (plasmoid.configuration.dateFormat === "isoDate") {
             return Qt.ISODate; // int
+        } else if (plasmoid.configuration.dateFormat === "rfc2822Date") {
+            return Qt.RFC2822Date;
         } else { // "shortDate"
             return Qt.SystemLocaleShortDate; // int
         }
diff --git a/applets/digital-clock/package/contents/ui/configAppearance.qml b/applets/digital-clock/package/contents/ui/configAppearance.qml
index 66bd5c9..ee3d866 100644
--- a/applets/digital-clock/package/contents/ui/configAppearance.qml
+++ b/applets/digital-clock/package/contents/ui/configAppearance.qml
@@ -164,6 +164,10 @@ QtLayouts.ColumnLayout {
                 {
                     'label': i18nc("custom date format", "Custom"),
                     'name': "custom"
+                },
+                {
+                    'label': i18n("RFC2822 Date"),
+                    'name': "rfc2822Date"
                 }
             ]
             onCurrentIndexChanged: cfg_dateFormat = model[currentIndex]["name"]
diff --git a/lookandfeel/contents/logout/Logout.qml b/lookandfeel/contents/logout/Logout.qml
index a63ee90..b4239b8 100644
--- a/lookandfeel/contents/logout/Logout.qml
+++ b/lookandfeel/contents/logout/Logout.qml
@@ -54,7 +54,7 @@ PlasmaCore.ColorScope {
         root.suspendRequested(4);
     }
  
-    property real timeout: 30
+    property real timeout: 10
     property real remainingTime: root.timeout
     property var currentAction: {
         switch (sdtype) {
diff --git a/sddm-theme/theme.conf.cmake b/sddm-theme/theme.conf.cmake
index ea9a943..8aefea9 100644
--- a/sddm-theme/theme.conf.cmake
+++ b/sddm-theme/theme.conf.cmake
@@ -2,4 +2,4 @@
 type=image
 color=#1d99f3
 fontSize=10
-background=${CMAKE_INSTALL_PREFIX}/${WALLPAPER_INSTALL_DIR}/Next/contents/images/5120x2880.png
+background=${CMAKE_INSTALL_PREFIX}/${WALLPAPER_INSTALL_DIR}/SolusPlasma/contents/images/1920x1080.png
